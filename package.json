{
  "name": "phone-otp",
  "module": "src/index.ts",
  "private": true,
  "packageManager": "bun@1.3.0",
  "dependencies": {
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "turbo": "^2.6.0"
  },
  "workspaces": [
    "server/",
    "extension/"
  ],
  "scripts": {
    "start": "bun server/dist/index.js",
    "dev": "turbo run dev",
    "build": "turbo run build",
    "dev:server": "turbo run dev --filter=server",
    "dev:extension": "turbo run dev --filter=extension",
    "build:extension": "turbo run build --filter=extension",
    "build:server": "turbo run build --filter=server",
    "test": "bun test --timeout=120000 --coverage"
  },
  "type": "module"
}