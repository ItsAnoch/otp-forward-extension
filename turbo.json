{
  "$schema": "https://turborepo.com/schema.json",
  "tasks": {
    "dev": {
      "dependsOn": ["extension#dev", "server#dev"],
      "persistent": true,
      "cache": false,
      "env": ["NODE_ENV", "PUBLIC_EXTENSION_TOKEN", "PHONE_AUTH_TOKEN"]
    },
    "build": {
      "dependsOn": ["extension#build", "server#build"],
      "outputs": ["extension/dist/**", "server/dist/**"],
      "env": ["NODE_ENV", "PUBLIC_EXTENSION_TOKEN", "PHONE_AUTH_TOKEN"]
    },
    "extension#dev": {
      "persistent": true,
      "cache": false,
      "env": ["NODE_ENV", "PUBLIC_EXTENSION_TOKEN"]
    },
    "server#dev": {
      "persistent": true,
      "cache": false,
      "env": ["NODE_ENV", "PHONE_AUTH_TOKEN"]
    },
    "extension#build": {
      "outputs": ["extension/dist/**"],
      "env": ["NODE_ENV", "PUBLIC_EXTENSION_TOKEN"]
    },
    "server#build": {
      "outputs": ["server/dist/**"],
      "env": ["NODE_ENV", "PHONE_AUTH_TOKEN"]
    }
  }
}
